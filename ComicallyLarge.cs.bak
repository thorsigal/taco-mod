using TacoMikesMod.Items;
using Terraria;
using Terraria.ModLoader;

namespace TacoMikesMod.Prefixes
{
	public class ComicallyLargePrefix : ModPrefix
	{
		private readonly byte _power;

		// see documentation for vanilla weights and more information
		// note: a weight of 0f can still be rolled. see CanRoll to exclude prefixes.
		// note: if you use PrefixCategory.Custom, actually use ChoosePrefix instead, see ExampleInstancedGlobalItem
		public override float RollChance(Item item)
			=> 0.5f;

		// determines if it can roll at all.
		// use this to control if a prefixes can be rolled or not
		public override bool CanRoll(Item item)
			=> true;

		// change your category this way, defaults to Custom
		public override PrefixCategory Category
			=> PrefixCategory.Melee;

		public ComicallyLargePrefix()
		{
		}

		public ComicallyLargePrefix(byte power)
		{
			_power = power;
		}

		// Allow multiple prefix autoloading this way (permutations of the same prefix)
		public override bool Autoload(ref string name)
		{
			if (!base.Autoload(ref name))
			{
				return false;
			}

			mod.AddPrefix("Comically Large", new ComicallyLargePrefix(1));
			return false;
		}

		public override void Apply(Item item)
		{
			item.knockBack *= 5.20f;
			item.useTime = (int)(item.useTime*1.5f);
			item.useAnimation = (int)( item.useAnimation*1.5f);
			item.damage = (int)(item.damage*1.69f);
			item.scale *= 4;
		}

		public override void ModifyValue(ref float valueMult)
		{
			float multiplier = 1f + 0.1f * _power;
			valueMult *= multiplier;
		}
	}
}